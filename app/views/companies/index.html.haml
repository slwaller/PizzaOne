.container
  %header.jumbotron
    %p
      = text_field_tag '', '', class: "company_search"
      = link_to "Search Restaurants", 'javascript:void(0);', class: "search_companies btn btn-primary"
  .row.search_list

  %hr/
  .row
    .col-lg-12
      %h3 Our Providers
      - @companies.each do |company|
        .col-md-3.col-sm-6.hero-feature
          .row.text-center
            .thumbnail
              = image_tag company.avatar.url, class: "img-logo"
              .caption
                %h3
                  = link_to company.name, company_path(company)
                %a.btn.btn-primary
                  = company.number
%center
  - if can? :create, Company
    = button_to "Add your restaurant to our group!", new_company_path, class: "btn btn-lg btn-primary", method: :get
  %hr/
