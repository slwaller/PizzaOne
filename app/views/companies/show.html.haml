%body
  .container
    .row
      .col-md-3
        %p.lead
          = @company.name
        .list-group
          %a.list-group-item{:href => "#"} Category 1
          %a.list-group-item{:href => "#"} Category 2
          %a.list-group-item{:href => "#"} Category 3
      .col-md-9
        .row.carousel-holder
          .col-md-12
            #carousel-example-generic.carousel.slide{"data-ride" => "carousel"}
              %ol.carousel-indicators
                %li{"data-slide-to" => "0", "data-target" => "#carousel-example-generic"}
                %li.active{"data-slide-to" => "1", "data-target" => "#carousel-example-generic"}
                %li{"data-slide-to" => "2", "data-target" => "#carousel-example-generic"}
              .carousel-inner
                .item
                  %img.slide-image{:alt => "", :src => "/assets/pizzashow1.jpg"}
                .item.active
                  %img.slide-image{:alt => "", :src => "/assets/pizzashow2.jpg"}
                .item
                  %img.slide-image{:alt => "", :src => "/assets/pizzashow3.jpg"}
              %a.left.carousel-control{"data-slide" => "prev", :href => "#carousel-example-generic"}
                %span.glyphicon.glyphicon-chevron-left
              %a.right.carousel-control{"data-slide" => "next", :href => "#carousel-example-generic"}
                %span.glyphicon.glyphicon-chevron-right
        .row
          .col-sm-4.col-lg-4.col-md-4
            .thumbnail
              %img{:alt => "", :src => "/assets/pizzaprod1.jpg"}/
              .caption
                %h4.pull-right $24.99
                %h4
                  %a{:href => "#"} Pepperoni Pizza
                %p
                  Your choice of size brick oven pepperoni pizza
              .ratings
                %p.pull-right 15 reviews
                %p
                  %span.glyphicon.glyphicon-star
                  %span.glyphicon.glyphicon-star
                  %span.glyphicon.glyphicon-star
                  %span.glyphicon.glyphicon-star
                  %span.glyphicon.glyphicon-star
          .col-sm-4.col-lg-4.col-md-4
            .thumbnail
              %img{:alt => "", :src => "/assets/pizzaprod2.jpg"}/
              .caption
                %h4.pull-right $15.99
                %h4
                  %a{:href => "#"} Pizza Rolls
                %p Rolled pizza dough with your choice of toppings!
              .ratings
                %p.pull-right 12 reviews
                %p
                  %span.glyphicon.glyphicon-star
                  %span.glyphicon.glyphicon-star
                  %span.glyphicon.glyphicon-star
                  %span.glyphicon.glyphicon-star
                  %span.glyphicon.glyphicon-star-empty
          .col-sm-4.col-lg-4.col-md-4
            .thumbnail
              %img{:alt => "", :src => "/assets/pizzaprod3.jpg"}/
